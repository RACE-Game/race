// The layout to launch facade and 2 transactors in Zellij

layout {
  pane {
    name "Facade"
    focus true
    cwd "./"
    command "just"
    args "dev-facade" "../race-holdem/facade.json"
    start_suspended true
  }
  pane split_direction="vertical" {
    pane {
      name "Transactor 1"
      command "just"
      cwd "./"
      args "facade-transactor" "1"
      start_suspended true
    }
    pane {
      name "Transactor 2"
      command "just"
      cwd "./"
      args "facade-transactor" "2"
      start_suspended true
    }
  }
}
