{
  "name": "race-sdk-solana",
  "type": "module",
  "version": "0.0.1",
  "description": "The Solana support for Race SDK",
  "main": "index.js",
  "scripts": {
    "test": "TS_NODE_COMPILER_OPTIONS='{ \"module\": \"commonjs\", \"target\": \"es2020\" }' ts-mocha ./tests/**/*.spec.ts",
    "test:watch": "TS_NODE_COMPILER_OPTIONS='{ \"module\": \"commonjs\", \"target\": \"es2020\" }' ts-mocha ./tests/**/*.spec.ts --watch --watch-files ./src, ./tests",
    "build": "tsc",
    "format": "prettier \"src/**/*.ts\" -w",
    "lint": "tslint -p tsconfig.json"
  },
  "files": [
    "lib/**/*"
  ],
  "module": "lib/index.js",
  "types": "lib/types/index.d.ts",
  "author": "",
  "license": "ISC",
  "dependencies": {
    "race-sdk-core": "file:../sdk-core"
  },
  "devDependencies": {
    "prettier": "^2.8.7",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.0.3",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1"
  },
  "peerDependencies": {
    "@metaplex-foundation/js": "^0.18.3",
    "@solana/spl-token": "^0.3.7",
    "@solana/web3.js": "^1.75.0"
  }
}
